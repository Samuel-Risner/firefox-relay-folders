{
  "name": "mozilla-relay-folders",
  "version": "1.0.0",
  "description": "An extension that allows you to use folders on the Mozilla Relay page (https://relay.firefox.com/accounts/profile/).",
  "main": "extension/dist/index.js",
  "scripts": {
    "build_ts": "tsc -p ./tsconfig.json",
    "watch_ts": "tsc -p ./tsconfig.json --watch",
    "build_tw": "tailwindcss -i ./tw/input.css -o ./extension/css/dist/output.css",
    "watch_tw": "tailwindcss -i ./tw/input.css -o ./extension/css/dist/output.css --watch",
    "build_wp": "webpack --config webpack.config.js",
    "watch_wp": "webpack --config webpack.config.js --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Samuel-Risner/mozilla-relay-folders.git"
  },
  "author": "Samuel Risner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Samuel-Risner/mozilla-relay-folders/issues"
  },
  "homepage": "https://github.com/Samuel-Risner/mozilla-relay-folders#readme",
  "dependencies": {
    "tailwindcss": "^3.3.2",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  }
}
